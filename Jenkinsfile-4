pipeline {
    agent any
    
    stages {
        stage('Clean WS') {
            steps {
                cleanWs()
            }
        }

        stage('pull scm'){
            steps{
                script {
                    git branch: 'main', 
                        credentialsId: 'github-cred', 
                        url: 'https://github.com/vladoz77/spring-petclinic'
                }
            }
            
        }

        stage("Build") {
            agent {
                docker {
                reuseNode true
                image 'maven:3.9.0-eclipse-temurin-17'
                }
            }
            steps {
                sh 'mvn  package  -Dcheckstyle.skip'
            }
        }
    }
}